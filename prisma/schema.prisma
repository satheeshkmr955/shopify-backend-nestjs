generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Song {
  id           String   @id @default(nanoid())
  title        String
  releasedDate DateTime
  duration     Int
  lyrics       String
  artists      Artist[] @relation("SongArtists") // This creates a many-to-many link
}

model Artist {
  id    String @id @default(nanoid())
  name  String @unique
  songs Song[] @relation("SongArtists")
}
